{
  "extends": "./tsconfig.app.json",
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.build.tsbuildinfo",
    "noEmit": false,
    "declaration": true,
    "emitDeclarationOnly": true,
    "declarationMap": true,
    "outDir": "./dist",
    "rootDir": "./src"
  },
  "include": [
    "src/index.ts",
    "src/react-hook-form.tsx",
    "src/components/**/*",
    "src/utils/**/*",
    "src/adapters/**/*",
    "src/types/**/*",
    "src/styles/**/*"
  ]
}


