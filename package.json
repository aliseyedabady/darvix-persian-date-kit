{
  "name": "persian-date-kit",
  "version": "1.0.2",
  "description": "Production-ready Persian (Jalali) date pickers for React with Gregorian-only values.",
  "keywords": [
    "react",
    "datepicker",
    "date-picker",
    "jalali",
    "persian",
    "shamsi",
    "calendar",
    "rtl",
    "dayjs",
    "typescript"
  ],
  "license": "MIT",
  "author": "Darvix",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "https://github.com/aliseyedabady/darvix-persian-date-kit.git"
  },
  "homepage": "https://github.com/aliseyedabady/darvix-persian-date-kit#readme",
  "bugs": {
    "url": "https://github.com/aliseyedabady/darvix-persian-date-kit/issues"
  },
  "engines": {
    "node": ">=18"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    },
    "./react-hook-form": {
      "types": "./dist/react-hook-form.d.ts",
      "import": "./dist/react-hook-form.mjs",
      "require": "./dist/react-hook-form.cjs"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "dev": "vite",
    "build": "vite build && tsc -p tsconfig.build.json && node scripts/copyStyles.mjs",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "dayjs": "^1.11.13",
    "jalaliday": "^3.1.0"
  },
  "peerDependencies": {
    "react": ">=18",
    "react-dom": ">=18",
    "react-hook-form": ">=7"
  },
  "peerDependenciesMeta": {
    "react-hook-form": {
      "optional": true
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@fontsource/vazirmatn": "^5.2.8",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react-swc": "^4.2.2",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-hook-form": "^7.62.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
